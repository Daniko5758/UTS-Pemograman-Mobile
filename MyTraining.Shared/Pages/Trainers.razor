@page "/trainers"
@inject ApiService Api
@using MyTraining.Shared.Models
@using MyTraining.Shared.Services

<h3>Trainers</h3>

<div class="input-group mb-3">
    <input @bind="search" class="form-control" placeholder="Search trainers..." />
    <button class="btn btn-primary" @onclick="Search">Search</button>
    <button class="btn btn-success" @onclick="New">New Trainer</button>
</div>

@if (loading)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Expertise</th>
                <th>Email</th>
                <th>Bio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in trainers)
            {
                <tr>
                    <td>@t.FullName</td>
                    <td>@t.Expertise</td>
                    <td>@t.Email</td>
                    <td>@t.Bio</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => Edit(t.Id)">Edit</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => Delete(t.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (editing)
{
    <div class="card mt-4">
        <div class="card-header">
            <h4>@(currentTrainer.Id == 0 ? "New Trainer" : "Edit Trainer")</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Full name</label>
                    <input class="form-control" @bind="currentTrainer.FullName" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Expertise</label>
                    <input class="form-control" @bind="currentTrainer.Expertise" />
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" @bind="currentTrainer.Email" />
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Bio</label>
                    <textarea class="form-control" rows="3" @bind="currentTrainer.Bio"></textarea>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-secondary me-2" @onclick="Cancel">Cancel</button>
            <button class="btn btn-success" @onclick="Save">Save</button>
        </div>
    </div>
}


@code {
    List<Trainer> trainers = new();
    bool loading = true;
    string? search;
    bool editing = false;
    Trainer currentTrainer = new();

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    async Task Load()
    {
        loading = true;
        trainers = await Api.GetTrainers();
        loading = false;
    }

    async Task Search()
    {
        loading = true;
        trainers = await Api.GetTrainers(search);
        loading = false;
    }

    void New()
    {
        currentTrainer = new Trainer();
        editing = true;
    }

    async Task Edit(int id)
    {
        var t = await Api.GetTrainer(id);
        if (t != null) { currentTrainer = t; editing = true; }
    }

    async Task Save()
    {
        if (currentTrainer.Id == 0)
            await Api.CreateTrainer(currentTrainer);
        else
            await Api.UpdateTrainer(currentTrainer.Id, currentTrainer);
        editing = false;
        await Load();
    }

    void Cancel() { editing = false; }

    async Task Delete(int id)
    {
        await Api.DeleteTrainer(id);
        await Load();
    }
}