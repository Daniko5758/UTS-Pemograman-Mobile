@page "/"
@inject ApiService Api
@using MyTraining.Shared.Models
@using MyTraining.Shared.Services

<PageTitle>Dashboard</PageTitle>

<h1 class="mb-3">Welcome to MyTraining Dashboard</h1>
<p class="lead">This is your main dashboard. Manage your trainers and courses efficiently from one place.</p>

<hr class="my-4" />

@if (loading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="row mb-4">

        <div class="col-md-6 mb-3">
            <div class="card text-white bg-primary shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Trainers</h5>
                    <h1 class="display-4">@trainers.Count</h1>
                </div>
                <a href="/trainers" class="card-footer text-white text-decoration-none">
                    View Details
                    <span class="float-end">&rarr;</span>
                </a>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card text-white bg-success shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Courses</h5>
                    <h1 class="display-4">@courses.Count</h1>
                </div>
                <a href="/courses" class="card-footer text-white text-decoration-none">
                    View Details
                    <span class="float-end">&rarr;</span>
                </a>
            </div>
        </div>

    </div>

    <h3>Quick Actions</h3>
    <p>Quickly add new data to your system.</p>
    <p>
        <a href="/trainers" class="btn btn-lg btn-outline-primary me-2">Manage Trainers</a>
        <a href="/courses" class="btn btn-lg btn-outline-success">Manage Courses</a>
    </p>
}

@code {
    private List<Trainer> trainers = new();
    private List<Course> courses = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        try
        {
            // Ambil data secara bersamaan untuk efisiensi
            var trainersTask = Api.GetTrainers();
            var coursesTask = Api.GetCourses();

            await Task.WhenAll(trainersTask, coursesTask);

            trainers = await trainersTask;
            courses = await coursesTask;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
            // Anda bisa menambahkan variabel errorMessage di sini jika perlu
        }
        loading = false;
    }
}